<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextAddNewPlaylistDialog"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Nhập tên danh sách mới"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddNewPlaylistDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddNewPlaylist" />

    <Button
        android:id="@+id/buttonAddNewPlaylistDialog"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Thêm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextAddNewPlaylistDialog"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddNewPlaylist" />

    <TextView
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/textViewAddNewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm danh sách mới"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>